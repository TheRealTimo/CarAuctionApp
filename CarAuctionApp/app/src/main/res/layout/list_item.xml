<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/listingImage"
        android:layout_width="410dp"
        android:layout_height="177dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/car_logo" />

    <TextView
        android:id="@+id/listingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingImage"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/listingItemDataValue"
        android:fontFamily="@font/raleway"
        android:textColor="@color/titleTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listingDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/listingItemDataValue"
        android:fontFamily="@font/raleway"
        android:textColor="@color/titleTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listingOpeningBid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingDescription"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/listingItemDataValue"
        android:fontFamily="@font/raleway"
        android:textColor="@color/titleTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listingEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingOpeningBid"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/listingItemDataValue"
        android:fontFamily="@font/raleway"
        android:textColor="@color/titleTextColor"
        android:textSize="18sp" />

</RelativeLayout>