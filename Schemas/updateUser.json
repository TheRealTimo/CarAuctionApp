{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "updateUser",
  "description": "Updates the user's data in the application",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "email": {
          "description": "The email of the user",
          "type": "string",
          "format": "email"
        },
        "password": {
          "description": "The password of the user",
          "type": "string",
          "minLength": 8,
          "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[@_+])[a-zA-Z0-9@_+]{8,}$"
        },
        "firstName": {
          "description": "The first name of the user",
          "type": "string",
          "pattern": "^[a-zA-Z]{2,}$"
        },
        "lastName": {
          "description": "The last name of the user",
          "type": "string",
          "pattern": "^[a-zA-Z]{2,}$"
        },
        "phone": {
          "description": "The phone number of the user",
          "type": "string",
          "pattern": "^[0-9]{,15}$"
        },
        "billingAddress": {
          "description": "The billing address of the user",
          "type": "string"
        },
        "shippingAddress": {
          "description": "The shipping address of the user",
          "type": "string"
        }
      }
    }
  },
  "required": [
    "user"
  ]
}