{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "getBid",
  "description": "Gets the details for a specific bid.",
  "type": "object",
  "properties": {
    "bidId": {
      "description": "The ID of the bid.",
      "type": "integer",
      "pattern": "^[0-9]+$"
    },
    "auctionId": {
      "description": "The ID of the auction.",
      "type": "integer",
      "pattern": "^[0-9]+$"
    }
  },
  "oneOf": [
    {
      "required": [
        "bidId"
      ]
    },
    {
      "required": [
        "auctionId"
      ]
    }
  ]
}



