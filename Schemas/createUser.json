{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "createUser",
  "description": "Creates a new user for the application",
  "type": "object",
  "properties": {
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "description": "The email of the user",
          "type": "string",
          "format": "email"
        },
        "password": {
          "description": "The password of the user",
          "type": "string",
          "minLength": 8,
          "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)[a-zA-Z\\d]{8,}$"
        },
        "firstName": {
          "description": "The first name of the user",
          "type": "string",
          "pattern": "^[a-zA-Z]{2,}$"
        },
        "lastName": {
          "description": "The last name of the user",
          "type": "string",
          "pattern": "^[a-zA-Z]{2,}$"
        },
        "phone": {
          "description": "The phone number of the user",
          "type": "string",
          "pattern": "^[0-9]{15}$"
        },
        "billingAddress": {
          "description": "The billing address of the user",
          "type": "string",
          "pattern": "^[a-zA-Z0-9]{2,}$"
        },
        "shippingAddress": {
          "description": "The shipping address of the user",
          "type": "string",
          "pattern": "^[a-zA-Z0-9]{2,}$"
        },
        "paymentMethod": {
          "description": "The payment method of the user",
          "type": "string",
          "default": "unverified"
        }
      }
    },
    "required": [
      "email",
      "password",
      "firstName",
      "lastName",
      "phone",
      "billingAddress",
      "shippingAddress",
      "paymentMethod"
    ]
  },
  "required": [
    "User"
  ]
}
