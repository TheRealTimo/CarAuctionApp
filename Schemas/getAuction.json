{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "getAuction",
  "description": "Gets a specific auction or all auctions",
  "type": "object",
  "properties": {
    "auctionId": {
      "description": "The auction ID",
      "type": "integer",
      "pattern": "^[0-9]+$"
    },
    "numberOfItems": {
      "description": "The number of items to return",
      "type": "integer",
      "pattern": "^[0-9]+$"
    }
  },
  "oneOf": [
    {
      "required": [
        "auctionId"
      ]
    },
    {
      "required": [
        "numberOfItems"
      ]
    }
  ]
}





