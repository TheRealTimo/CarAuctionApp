{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "getUser",
  "description": "Get user by id",
  "type": "object",
  "properties": {
    "userId": {
      "description": "User id",
      "type": "integer",
      "pattern": "^[0-9]+$"
    },
    "email": {
      "description": "User email",
      "type": "string",
      "format": "email"
    }
  },
  "oneOf": [
    {
      "required": [
        "userId"
      ]
    },
    {
      "required": [
        "email"
      ]
    }
  ]
}
